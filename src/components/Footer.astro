---
import { sanityClient } from '../lib/sanity';

let sanityData: any = null;
try {
  sanityData = await sanityClient.fetch(`*[_type == "impostazioni"][0]{
    "logo": logo.asset->url + "?w=400&fm=webp&q=90",
    email,
    telefono,
    indirizzo,
    social { instagram, facebook, pinterest }
  }`);
} catch (e) {
  // Sanity fetch failed, use fallback values
}

const logo = sanityData?.logo;

const navLinks = [
  { href: '/chi-sono', label: 'Chi Sono' },
  { href: '/servizi', label: 'Servizi' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/blog', label: 'Blog' },
  { href: '/preventivo', label: 'Preventivo' },
  { href: '/contatti', label: 'Contatti' },
];

const currentYear = new Date().getFullYear();

const displayEmail = sanityData?.email || 'gaiacrognale@gmail.com';
const displayTelefono = sanityData?.telefono || '327 3855362';
const displayIndirizzo = sanityData?.indirizzo || 'Roma, Italia';
const igUrl = sanityData?.social?.instagram || 'https://www.instagram.com/gaiacrognale_events/';
const fbUrl = sanityData?.social?.facebook || 'https://www.facebook.com/GaiaCrognaleEventi';

const igSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><circle cx="12" cy="12" r="4"/><circle cx="17.5" cy="6.5" r="0.5" fill="currentColor" stroke="none"/></svg>';
const fbSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>';
const waSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>';
---

<footer data-navbar-theme="dark" class="bg-charcoal py-[4.5rem] px-6">
  <div class="max-w-[1050px] mx-auto">
    <!-- Main Grid -->
    <div class="grid grid-cols-1 md:grid-cols-[2fr_1fr_1fr] gap-12 md:gap-8">
      <!-- Column 1: Brand -->
      <div>
        <a href="/" class="block mb-4">
          {logo ? (
            <img src={logo} alt="Gaia Events" width="231" height="152" class="h-[80px] w-auto object-contain" style="filter: brightness(0) invert(1);" />
          ) : (
            <span class="font-serif text-[1.6rem] text-white tracking-[0.1em]">GAIA EVENTS</span>
          )}
        </a>
        <p class="text-white/55 text-sm leading-relaxed max-w-xs">
          Wedding Planner & Event Manager a Roma. Trasformo i tuoi sogni in eventi indimenticabili.
        </p>
        <!-- Social Icons -->
        <div class="flex items-center gap-4 mt-6">
          <a
            href="https://wa.me/393273855362"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-5 h-5 text-white/55 hover:text-white transition-colors duration-300 no-underline"
            aria-label="WhatsApp"
          ><Fragment set:html={waSvg} /></a>
          <a
            href={igUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-5 h-5 text-white/55 hover:text-white transition-colors duration-300 no-underline"
            aria-label="Instagram"
          ><Fragment set:html={igSvg} /></a>
          <a
            href={fbUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-5 h-5 text-white/55 hover:text-white transition-colors duration-300 no-underline"
            aria-label="Facebook"
          ><Fragment set:html={fbSvg} /></a>
        </div>
      </div>

      <!-- Column 2: Navigation -->
      <div>
        <span class="font-sans text-[0.65rem] tracking-[0.18em] uppercase text-gold block mb-6">
          Navigazione
        </span>
        <ul class="space-y-3">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white/55 text-sm hover:text-white transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a
              href="/en/destination-wedding"
              class="inline-flex items-center gap-1.5 text-white/55 text-sm hover:text-white transition-colors duration-300"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/><path d="M2 12h20"/></svg>
              Destination Wedding
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 3: Contacts -->
      <div>
        <span class="font-sans text-[0.65rem] tracking-[0.18em] uppercase text-gold block mb-6">
          Contatti
        </span>
        <ul class="space-y-3 text-white/55 text-sm">
          <li>{displayIndirizzo}</li>
          <li>
            <a href={`mailto:${displayEmail}`} class="hover:text-white transition-colors duration-300">
              {displayEmail}
            </a>
          </li>
          <li>
            <a href={`tel:${displayTelefono.replace(/\s/g, '')}`} class="hover:text-white transition-colors duration-300">
              {displayTelefono}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-12 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-white/35 text-xs">
        &copy; {currentYear} Gaia Events. Tutti i diritti riservati.
      </p>
      <div class="flex items-center gap-6">
        <a href="/privacy" class="text-white/35 text-xs hover:text-white/60 transition-colors duration-300">
          Privacy Policy
        </a>
        <a href="/cookie" class="text-white/35 text-xs hover:text-white/60 transition-colors duration-300">
          Cookie Policy
        </a>
        <a href="/faq" class="text-white/35 text-xs hover:text-white/60 transition-colors duration-300">
          FAQ
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer a {
    text-decoration: none;
  }
  footer a:focus-visible {
    outline-offset: 2px;
  }
  footer svg {
    display: block;
  }
</style>
