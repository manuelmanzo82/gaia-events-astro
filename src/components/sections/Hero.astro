---
interface Props {
  eyebrow?: string;
  titolo?: string;
  sottotitolo?: string;
  immagine?: string;
}

const {
  eyebrow,
  titolo,
  sottotitolo,
  immagine,
} = Astro.props;

const defaultTitolo = 'Creiamo Insieme<br /><em class="italic">il Tuo Sogno</em>';
const defaultSottotitolo = 'Esclusività e ricercatezza per il giorno più importante della tua vita';
---

<section data-navbar-theme="dark" class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-charcoal">
    {immagine ? (
      <img src={immagine} alt="Gaia Events wedding planner a Roma" class="absolute inset-0 w-full h-full object-cover" />
    ) : (
      <div class="absolute inset-0 flex items-center justify-center">
        <span class="text-white/10 text-2xl tracking-widest uppercase select-none">Hero Background Image</span>
      </div>
    )}
  </div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-charcoal/35 to-charcoal/55"></div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 mt-12">
    <p class="font-sans text-[0.8rem] tracking-[0.35em] uppercase text-gold mb-5">
      {eyebrow || 'Wedding Planner & Event Manager'}
    </p>
    <h1 class="text-[clamp(2.2rem,6vw,4rem)] font-light text-white leading-[1.15] mb-6" set:html={titolo || defaultTitolo} />
    <p class="font-sans text-[0.95rem] font-light text-white/90 max-w-[28rem] mx-auto mb-8">
      {sottotitolo || defaultSottotitolo}
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="/contatti"
        class="inline-block font-sans text-[0.75rem] tracking-[0.18em] uppercase px-9 py-4 bg-gold text-charcoal hover:bg-white transition-all duration-300"
      >
        Parliamo del Tuo Evento
      </a>
      <a
        href="https://wa.me/393273855362?text=Ciao%20Gaia%2C%20vorrei%20informazioni%20sui%20vostri%20servizi%20%F0%9F%92%90"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 font-sans text-[0.75rem] tracking-[0.18em] uppercase px-9 py-4 border border-white/60 text-white hover:bg-white/10 transition-all duration-300"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
        Scrivimi su WhatsApp
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10">
    <div class="w-[1.4rem] h-[2.2rem] border-2 border-white/50 rounded-full flex items-start justify-center pt-1.5">
      <div class="w-1 h-1 rounded-full bg-gold animate-bounce"></div>
    </div>
  </div>
</section>
