---
interface Props {
  eyebrow?: string;
  foto?: string;
  titolo?: string;
  testoPrincipale?: string;
  testoLink?: string;
}

const {
  eyebrow,
  foto,
  titolo,
  testoPrincipale,
  testoLink,
} = Astro.props;

const defaultTesto = 'Da oltre <strong class="font-medium text-charcoal">8 anni</strong> trasformo i sogni in eventi indimenticabili. Ho avuto l\'onore di lavorare con brand prestigiosi come <strong class="font-medium text-charcoal">Calzedonia</strong>, <strong class="font-medium text-charcoal">BNL</strong> e <strong class="font-medium text-charcoal">Zurich</strong>, portando la stessa cura e attenzione ai dettagli in ogni matrimonio.';
---

<section data-navbar-theme="light" class="py-20 px-6">
  <div class="max-w-[1050px] mx-auto grid grid-cols-1 md:grid-cols-[0.9fr_1.1fr] gap-12 md:gap-16 items-center">
    <!-- Left: Image -->
    <div class="relative">
      <div class="aspect-[4/5] bg-beige rounded-[3px] flex items-center justify-center overflow-hidden">
        {foto ? (
          <img src={foto} alt="Gaia Crognale, wedding planner a Roma" class="w-full h-full object-cover" loading="lazy" />
        ) : (
          <span class="text-charcoal/20 text-lg tracking-widest uppercase select-none">Foto Gaia</span>
        )}
      </div>
      <!-- Gold border frame -->
      <div class="absolute top-[15px] left-[15px] right-[-15px] bottom-[-15px] border-2 border-gold rounded-[3px] -z-10"></div>
    </div>

    <!-- Right: Text -->
    <div>
      <p class="font-sans text-[0.7rem] tracking-[0.2em] uppercase text-sage mb-4">{eyebrow || 'Chi Sono'}</p>
      <h2 class="font-serif text-[clamp(1.8rem,4vw,2.5rem)] font-normal text-charcoal mb-6">
        {titolo || 'Ciao, sono Gaia'}
      </h2>
      <p class="text-[1.05rem] font-light leading-[1.85] text-charcoal/60 mb-8" set:html={testoPrincipale || defaultTesto} />
      <a
        href="/chi-sono"
        class="group inline-flex items-center gap-2 font-sans text-[0.8rem] tracking-[0.12em] uppercase text-gold hover:gap-4 transition-all duration-300"
      >
        {testoLink || 'Scopri la mia storia'}
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
