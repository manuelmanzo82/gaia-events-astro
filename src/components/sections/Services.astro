---
interface Props {
  servizi?: { titolo: string; descrizione: string; icona: string; slug?: any }[];
}
const { servizi } = Astro.props;

const defaultServices = [
  {
    title: 'Wedding Planning',
    description: 'Dalla proposta al "Sì, lo voglio". Mi occupo di ogni dettaglio per rendere il tuo matrimonio un evento perfetto e indimenticabile.',
    icon: 'heart',
    link: '/servizi',
  },
  {
    title: 'Corporate Events',
    description: 'Eventi aziendali che lasciano il segno. Conferenze, gala dinner, team building e lanci prodotto curati nei minimi dettagli.',
    icon: 'sparkles',
    link: '/servizi',
  },
  {
    title: 'Destination Wedding',
    description: 'Il tuo matrimonio da sogno ovunque nel mondo. Italia e oltre, per un evento unico in location straordinarie.',
    icon: 'plane',
    link: '/servizi',
  },
];

const services = (servizi && servizi.length > 0)
  ? servizi.slice(0, 3).map(s => ({
      title: s.titolo,
      description: s.descrizione,
      icon: s.icona || 'heart',
      link: '/servizi',
    }))
  : defaultServices;
---

<section data-navbar-theme="light" class="py-20 px-6 bg-beige">
  <!-- Header -->
  <div class="text-center mb-14">
    <p class="font-sans text-[0.7rem] tracking-[0.2em] uppercase text-sage mb-4">Servizi</p>
    <h2 class="font-serif text-[clamp(1.8rem,4vw,2.5rem)] font-normal text-charcoal">
      Come Posso Aiutarti
    </h2>
  </div>

  <!-- Cards Grid -->
  <div class="max-w-[1050px] mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
    {services.map((service) => (
      <div class="group bg-ivory p-10 text-center rounded-[3px] transition-all duration-500 hover:-translate-y-1.5 hover:shadow-[0_15px_35px_rgba(0,0,0,0.08)]">
        <!-- Icon Circle -->
        <div class="w-[65px] h-[65px] mx-auto mb-6 rounded-full border-2 border-gold flex items-center justify-center transition-all duration-500 group-hover:bg-gold">
          {service.icon === 'heart' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gold group-hover:text-white transition-all duration-500 group-hover:rotate-12">
              <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
            </svg>
          )}
          {service.icon === 'sparkles' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gold group-hover:text-white transition-all duration-500 group-hover:rotate-12">
              <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
              <path d="M20 3v4"></path>
              <path d="M22 5h-4"></path>
              <path d="M4 17v2"></path>
              <path d="M5 18H3"></path>
            </svg>
          )}
          {service.icon === 'plane' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gold group-hover:text-white transition-all duration-500 group-hover:rotate-12">
              <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"></path>
            </svg>
          )}
        </div>

        <h3 class="font-serif text-[1.3rem] text-charcoal mb-3">{service.title}</h3>
        <p class="font-sans text-[0.8rem] text-charcoal/50 leading-relaxed mb-6">{service.description}</p>
        <a
          href={service.link}
          class="inline-block font-sans text-[0.75rem] tracking-[0.1em] uppercase text-gold hover:text-bordeaux transition-colors duration-300"
        >
          Scopri di più →
        </a>
      </div>
    ))}
  </div>
</section>
