---
interface Props {
  eyebrow?: string;
  titolo?: string;
  descrizione?: string;
  testoBottone?: string;
  linkBottone?: string;
}
const { eyebrow, titolo, descrizione, testoBottone, linkBottone } = Astro.props;
---

<section data-navbar-theme="light" class="py-28 px-6 bg-[#F5F0EB]">
  <div class="max-w-[600px] mx-auto text-center">
    <p class="font-sans text-[0.7rem] tracking-[0.25em] uppercase text-sage mb-5">
      {eyebrow || 'Iniziamo Insieme'}
    </p>
    <h2 class="font-serif text-[clamp(1.8rem,4.5vw,2.8rem)] font-light text-charcoal leading-[1.2] mb-6" set:html={titolo || 'Pronta a Realizzare<br /><em class="italic">il Tuo Sogno?</em>'} />
    <p class="font-sans text-[0.95rem] font-light text-charcoal/60 max-w-[26rem] mx-auto mb-10">
      {descrizione || 'Raccontami la tua visione e insieme creeremo qualcosa di indimenticabile'}
    </p>
    <a
      href={linkBottone || '/preventivo'}
      class="inline-block font-sans text-[0.75rem] tracking-[0.18em] uppercase px-9 py-4 bg-gold text-charcoal hover:bg-charcoal hover:text-ivory transition-all duration-300"
    >
      {testoBottone || 'Parliamone Insieme'}
    </a>
  </div>
</section>
